@model smartFunds.Model.Common.CustomerLevelModel

@{
    ViewData["Title"] = @Common.EditCustomerLevel;
    Layout = "_AdminLayout";
}

@if (Model != null)
{
    <section class="add-client-distribution">
        <div class="container-fluid">
            <h1 class="section-title">@Common.EditCustomerLevel </h1>
            <form method="post" asp-area="admin" asp-controller="customerlevel" asp-action="editcustomerlevel">
                <input asp-for="IDCustomerLevel" type="hidden" placeholder="IDCustomerLevel" class="form-control" />
                <div class="box-body">
                    <div class="form-group">
                        <div class="row">
                            <strong class="col-sm-3">@Common.NameCustomerLevel</strong>
                            <div class="col-sm-6">
                                <input asp-for="NameCustomerLevel" class="form-control" />
                                <div class="error-messeage"><span>@ViewBag.Checkname</span></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <strong class="col-sm-3">@Common.SumMoneyInvest</strong>
                            <div class="col-sm-6">
                                <div class="weight-risk-add__trongso">
                                    <span>@Common.MinMoney</span>
                                    <input asp-for="MinMoney" class="form-control form-control-number" type="text" />
                                    <span>@Common.MaxMoney</span>
                                    <input asp-for="MaxMoney" class="form-control form-control-number" type="text" />
                                </div>
                                <div class="error-messeage"><span>@ViewBag.CheckValue</span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="btn-part text-center">
                        <button class="btn btn-action" type="submit">@Common.Confirm</button>
                        <a class="btn btn-action" data-micromodal-trigger='model-cancel' href="#">Hủy</a>
                        <div class="manager-risk__questions__list-questions__item__title">
                            <div class="item-option">
                                <div class="modal micromodal-slide" id="model-cancel" aria-hidden="true">
                                    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
                                        <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="manager-user-title">
                                            <header class="modal__header">
                                                <h2 class="modal__title" id="manager-user-title">@Common.CancelMessage</h2>
                                                <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                                            </header>
                                            <footer class="modal__footer">
                                                <a class="modal__btn modal__btn-primary" asp-action="List">
                                                    Ok
                                                </a>
                                                <button class="modal__btn" data-micromodal-close aria-label="Close this dialog window">
                                                    Cancel
                                                </button>
                                            </footer>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
}

