@model ResetPasswordViewModel
@{
    ViewData["Title"] = Common.ResetPassword;
    Layout = "_AdminLoginLayout";
}

<section class="adminResetPass">
    <section class="login">
        <div class="login__Wrapper">
            <div class="container-fluid">
                <h1 class="section-title">@Common.ResetPassword</h1>
                <form method="post">
                    <input asp-for="Code" value="@Model.Code" type="hidden" />
                    <input asp-for="Email" value="@Model.Email" type="hidden" />
                    <div class="row center-xs">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input class="form-control" asp-for="Password" value="@Model.Password">
                                <i class="fas fa-eye myAccountEditPass__showPassword"></i>
                            </div>
                            <div class="error-messeage"><span asp-validation-for="Password"></span></div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input class="form-control" asp-for="ConfirmPassword" value="@Model.ConfirmPassword">
                                <i class="fas fa-eye myAccountEditPass__showPassword"></i>
                            </div>
                            <div class="error-messeage"><span asp-validation-for="ConfirmPassword"></span></div>
                            <div class="tn-part btns-wrapper-center">
                                <button class="btn btn-action" type="submit">
                                    @Common.ResetPassword
                                </button>
                                <span class="error-messeage">@ViewData["Message"]</span>
                            </div>
                            <a asp-controller="Admin" asp-action="Login">@Common.BackToLogin</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>