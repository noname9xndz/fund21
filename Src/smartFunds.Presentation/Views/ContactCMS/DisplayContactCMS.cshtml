@model smartFunds.Model.Common.ContactCMSModel

@{
    ViewData["Title"] = "UpdateContactCMS";
}

<div class="manager-settings__item">
    <div class="manager-settings__item__title">
        <h1>
            Liên hệ
        </h1>
        <div class="options">
            <a asp-controller="ContactCMS" asp-action="UpdateContactCMS"><i class="fa fa-edit"></i></a>
        </div>
    </div>
    <div class="manager-settings__item__content">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3">
                    <label>Địa chỉ email:</label>
                </div>
                <div class="col-lg-9">
                    <p>@Model.Email</p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3">
                    <label>Số điện thoại:</label>
                </div>
                <div class="col-lg-9">
                    <p>@Model.Phone</p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3">
                    <label>Địa chỉ email nhận thông tin liên hệ:</label>
                </div>
                <div class="col-lg-9">
                    <p>@Model.EmailForReceiving</p>
                </div>
            </div>
        </div>
    </div>
</div>


