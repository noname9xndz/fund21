@model GenericIntroducingSettingModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add</h2>
@if (@ViewBag.ErrorDataImage != null)
{
    <p class="text-danger">
        @ViewBag.ErrorDataImage. All images are needed to add;
    </p>

}
<script src="~/lib/ckeditor/ckeditor.js"></script>
<section class="manager-settings-introduce">
    <div class="container-fluid">
        <div class="content">
            <h1 class="section-title">Giới thiệu chung</h1>
            <div class="row center-xs">
                <div class="col-sm-6">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                        <div class="form-group">
                            <label asp-for="Banner"></label>
                            <div class="image-upload">
                                <div class="image-upload__item upload-banner-image"></div>
                                <div class="image-upload__item__btn-upload"></div>
                                <input class="image-upload__item__input-image" name="BannerFile" type="file" accept="image/*" />
                                <span asp-validation-for="Banner" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="MobileBanner"></label>
                            <div class="image-upload">
                                <div class="image-upload__item upload-banner-image"></div>
                                <div class="image-upload__item__btn-upload"></div>
                                <input class="image-upload__item__input-image" name="MobileBannerFile" type="file" accept="image/*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <script>
                                CKEDITOR.replace('Description');
                            </script>
                        </div>
                        <div class="btns-wrapper-center">
                            <button class="btn btn-action" id="add-questions" type="submit">@Common.Confirm</button>
                            <a class="btn btn-action" data-micromodal-trigger='model-cancel'>Hủy.</a>
                        </div>
                        <div class="manager-risk__questions__list-questions__item__title">
                            <div class="item-option">
                                <div class="modal micromodal-slide" id="model-cancel" aria-hidden="true">
                                    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
                                        <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="manager-user-title">
                                            <header class="modal__header">
                                                <h2 class="modal__title" id="manager-user-title">@Common.CancelMessage</h2>
                                                <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
                                            </header>
                                            <footer class="modal__footer">
                                                <a class="modal__btn modal__btn-primary" asp-action="List">
                                                    Ok
                                                </a>
                                                <button class="modal__btn" data-micromodal-close aria-label="Close this dialog window">
                                                    Cancel
                                                </button>
                                            </footer>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<input id="required-mess" value="Không bỏ trống" type="hidden" />