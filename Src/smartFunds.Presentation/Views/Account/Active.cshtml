@model ActiveViewModel

@{
    ViewData["Title"] = "Active Account";
}
<h2>@ViewData["Title"]</h2>
<div>
    @if (Model.UserName.IsEmail())
    {
        <p>
            Tài khoản đã đăng ký thành công, bạn hãy kiểm tra email để thực hiện kích hoạt tài khoản.
        </p>

    }
    else
    {
        <p>
            Tài khoản đã đăng ký thành công, bạn hãy nhập mã kích hoạt để kích hoạt tài khoản.
        </p>
        <form asp-action="ResendCode" asp-controller="Account" method="post">
            <p>
                Bạn không nhận được mã kích hoạt?
            </p>
            <button type="submit" class="btn btn-default">Gửi lại mã kích hoạt</button>
        </form>
        <form method="post">
            <h4>Kích hoạt tài khoản</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="UserName" type="hidden" />
            <div class="form-group">
                <input asp-for="VerifyCode" placeholder="Mã kích hoạt *" class="form-control" />
                <span asp-validation-for="VerifyCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Kích hoạt</button>
        </form>
    }
</div>
