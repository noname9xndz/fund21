@model InvestViewModel
@{
    ViewData["Title"] = Common.Investment;
}

<div class="body-content-endUser">
    <div class="user-withdrawal-invest px-15">
        <h1 class="section-title-endUser">@Common.Investment</h1>
        <form class="user-form-group p-15" id="user-invest-money" method="post" novalidate>
            @if (!string.IsNullOrWhiteSpace(TempData["Error"]?.ToString()))
            {
                <span class="warning-message" style="margin-top: 0px; margin-bottom: 20px">
                    @TempData["Error"]
                </span>
            }
            <div class="user-form-control user-expected-money-amount">
                <span class="user-form-control__title">
                    Nhập số tiền muốn đầu tư
                </span>
                <input class="input-form-control form-control-number" type="text" asp-for="TargetAmount">
                <span class="warning-message" asp-validation-for="TargetAmount">@ViewData["Message"]</span><span class="currency">đ</span>
            </div>
            <div class="user-withdrawal-invest__action">
                <a class="btn btn-actions is-destroy" asp-action="MyWallet" asp-controller="Account">
                    Hủy
                </a>
                <button class="btn btn-actions" type="submit">Đồng ý</button>
            </div>
        </form>
        <div id="pageloader">
            <img src="/assets/images/loader-large.gif" alt="processing..." />
        </div>
    </div>
</div>