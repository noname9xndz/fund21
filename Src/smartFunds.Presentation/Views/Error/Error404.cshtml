@{
    ViewData["Title"] = "Error404";
    if (UserService.IsSignedIn(User))
    {
        if (!UserService.IsInRole(UserService.GetCurrentUser().Result, RoleName.Customer).Result)
        {
            Layout = "_AdminLayout";
        }

    }
}
<div class="body-content-endUser body-content-error-page">
    <section class="user-not-found-section user-error-section">
        <div class="user-not-found-content user-error-content">
            <img src="@GeneralImageFolder.Path@("404.png")" alt="" />
            <h1>Đã có lỗi xảy ra hoặc trang bạn truy cập không tồn tại</h1>
            <a href="/">
                <span>Quay lại</span>
                <span>trang chủ</span>
            </a>
        </div>
    </section>
</div>
