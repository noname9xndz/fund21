@using smartFunds.Model.Common;
@model FAQModel
@{
    ViewData["Title"] = "FAQ Detail";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-4">
        <section>

            <h4>@ViewData["Title"]</h4>

            <table class="table">
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Title)</td>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Content)</td>
                    <td>@Html.Raw(Model.Content)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Category)</td>
                    <td>@Html.DisplayFor(model => model.Category)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.DateLastUpdated)</td>
                    <td>@Html.DisplayFor(model => model.DateLastUpdated)</td>
                </tr>
            </table>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a asp-action="List">List</a>
        </section>
    </div>
</div>
